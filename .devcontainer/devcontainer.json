// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/python
{
    "name": "Thesis",
    // Or use a Dockerfile or Docker Compose file. More info: https://containers.dev/guide/dockerfile
    // Use 'postCreateCommand' to run commands after the container is created.
    // "user"
    "postCreateCommand": "pre-commit install --install-hooks && cd /workspace/agent && uv sync --all-groups && cd /workspace/web && uv sync --all-groups  && sudo sh /workspace/postCreateCommand.sh",
    "dockerComposeFile": [
        "../docker-compose.devcontainer.yaml"
    ],
    "service": "devcontainer",
    "forwardPorts": [
        50051,
        5432,
        5433,
        8002,
        8000,
        3306,
        8080,
        80
    ],
    // Configure tool-specific properties.
    "customizations": {
        // Configure properties specific to VS Code.
        "vscode": {
            "settings": {
                "git.enabled": true,
                "python.testing.pytestArgs": [
                    "tests"
                ],
                "python.testing.unittestEnabled": false,
                "python.testing.pytestEnabled": true,
                "python.defaultInterpreterPath": "/workspaces/.venv/bin/python",
                "python.testing.pytestPath": "/workspaces/.venv/bin/pytest"
            },
            "extensions": [
                "github.vscode-pull-request-github",
                "streetsidesoftware.code-spell-checker",
                "charliermarsh.ruff",
                "streetsidesoftware.code-spell-checker-russian",
                "tamasfe.even-better-toml",
                "github.vscode-github-actions",
                "me-dutour-mathieu.vscode-github-actions",
                "IronGeek.vscode-env",
                "bierner.docs-view",
                "DavidAnson.vscode-markdownlint",
                "wmaurer.vscode-jumpy",
                "tumuerzunong.pycharm-like-snippets",
                "sankethdev.vscode-proto",
                "nefrob.vscode-just-syntax",
                "cfcluan.project-scopes"
            ]
        }
    },
    "features": {
        "ghcr.io/devcontainers/features/git:1": {
            "version": "latest"
        },
        "ghcr.io/prulloac/devcontainer-features/pre-commit:1": {
            "version": "latest"
        },
        "ghcr.io/jsburckhardt/devcontainer-features/uv:1": {
            "version": "latest"
        },
        "ghcr.io/jsburckhardt/devcontainer-features/ruff:1": {
            "version": "latest"
        },
        "ghcr.io/guiyomh/features/just:0": {
            "version": "latest"
        },
        "ghcr.io/devcontainers/features/docker-in-docker:2": {}
    },
    "workspaceFolder": "/workspace"
}
